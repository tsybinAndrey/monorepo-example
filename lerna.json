{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "ignoreChanges": ["*.md", ".gitignore", "lerna.json"]
    }
  },
  "packages": [
    "services/*",
    "packages/*"
  ],
  "version": "independent"
}
